---
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
---

<section id="projects" class="py-24 max-w-6xl mx-auto px-6">
  <div class="text-center mb-16">
    <p class="text-cyan-400 text-sm font-semibold tracking-widest uppercase mb-3">Portfolio</p>
    <h2 class="text-4xl md:text-5xl font-black text-white">Projects</h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project: any) => (   <!-- Tambah ": any" di sini -->
      <div class="bg-slate-900 border border-slate-800 rounded-2xl p-6 card-hover">
        <div class="flex justify-between items-start mb-4">
          <div class="w-10 h-10 bg-cyan-500/10 border border-cyan-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <a href={project.data.github} target="_blank" class="text-slate-500 hover:text-cyan-400 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{project.data.title}</h3>
        <p class="text-slate-400 text-sm mb-4 leading-relaxed">{project.data.description}</p>
        <div class="flex flex-wrap gap-2">
          {project.data.tech.map((t: string) => (   <!-- Tambah ": string" di sini -->
            <span class="text-xs bg-slate-800 text-cyan-400 px-2 py-1 rounded-md border border-slate-700">
              {t}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
