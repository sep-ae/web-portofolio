    <h2 class="text-4xl md:text-5xl font-black text-white mb-6">Let's Connect</h2>
    <p class="text-slate-400 mb-12 max-w-md mx-auto">
      Terbuka untuk peluang kerja, kolaborasi project, atau sekedar ngobrol soal tech!
    </p>

    <!-- Social buttons -->
    <div class="flex flex-wrap gap-4 justify-center">
      {socials.map(social => (
        <a
          href={social.href}
          target={social.label !== "Email" ? "_blank" : "_self"}
          rel="noopener noreferrer"
          class={`flex items-center gap-2 px-6 py-3 rounded-full font-semibold transition-all duration-200 hover:scale-105 ${
            social.primary
              ? "bg-cyan-500 hover:bg-cyan-400 text-slate-900"
              : "bg-slate-800 hover:bg-slate-700 border border-slate-700 hover:border-cyan-500 text-slate-300 hover:text-cyan-400"
          }`}
        >
          <Fragment set:html={social.icon} />
          {social.label}
        </a>
      ))}
    </div>
  </div>
</section>

