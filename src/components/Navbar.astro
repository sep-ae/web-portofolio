---
const links = [
  { label: "About", href: "#about" },
  { label: "Projects", href: "#projects" },
  { label: "Skills", href: "#skills" },
  { label: "Contact", href: "#contact" },
];
---

<!-- Floating Navbar -->
<nav id="navbar" class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[90%] max-w-3xl transition-all duration-300">
  <div class="bg-slate-900/70 backdrop-blur-xl border border-slate-700/50 rounded-2xl px-6 py-3 flex justify-between items-center shadow-lg shadow-black/20">
    
    <!-- Logo -->
    <a href="/" class="text-lg font-black gradient-text tracking-tight">
      sep-ae
    </a>

    <!-- Desktop menu -->
    <ul class="hidden md:flex gap-1">
      {links.map(link => (
        <li>
          <a href={link.href}
             class="text-slate-400 hover:text-white hover:bg-slate-800 px-4 py-2 rounded-xl transition-all duration-200 text-sm font-medium block">
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Desktop CTA -->
    <a href="#contact"
       class="hidden md:block bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-bold text-sm px-5 py-2 rounded-xl transition-all duration-200 hover:scale-105">
      Hire Me
    </a>

    <!-- Mobile hamburger -->
    <button id="menu-btn" class="md:hidden text-slate-400 hover:text-white p-1 rounded-lg hover:bg-slate-800 transition-colors">
      <svg id="icon-open" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg id="icon-close" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Mobile menu dropdown -->
  <div id="mobile-menu" class="hidden mt-2 bg-slate-900/90 backdrop-blur-xl border border-slate-700/50 rounded-2xl px-4 py-3 flex flex-col gap-1 shadow-lg shadow-black/20">
    {links.map(link => (
      <a href={link.href}
         class="mobile-link text-slate-400 hover:text-white hover:bg-slate-800 px-4 py-3 rounded-xl transition-all duration-200 text-sm font-medium">
        {link.label}
      </a>
    ))}
    <div class="border-t border-slate-800 mt-2 pt-2">
      <a href="#contact"
         class="mobile-link block text-center bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-bold px-4 py-3 rounded-xl transition-all duration-200 text-sm">
        Hire Me
      </a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');
  const navbar = document.getElementById('navbar');

  // Toggle mobile menu
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });

  // Close mobile menu saat klik link
  document.querySelectorAll('.mobile-link').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    });
  });

  // Shrink navbar saat scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('top-2');
      navbar?.classList.remove('top-4');
    } else {
      navbar?.classList.add('top-4');
      navbar?.classList.remove('top-2');
    }
  });
</script>
